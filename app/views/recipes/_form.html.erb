<%= form_for @recipe do |f|  %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br>

    <%= f.fields_for :ingredients do |inner| %>
        <%= inner.label :name %>
        <%= inner.text_field :name %><br> 

        <%= inner.label :quantity %>
        <%= inner.text_field :quantity %>
    <% end %>

    <%= f.submit %>
<% end %>
